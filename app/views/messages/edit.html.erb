<%= c 'box', style: :large do %>
  <%= c 'wrapper', style: :xnarrow do %>
    <%= c 'stack' do %>

      <%= c 'stack', space: :small do %>
        <%= c 'heading', tag: :h1 do %>
          <%= t('message.edit.heading') %>
        <% end %>

        <p>
          <%= t(
            'message.edit.text',
            name: @contributor.name,
            title: @request.title
          ).html_safe %>
        </p>
      <% end %>

      <%= c 'chat_message',
        style: :compact,
        hide_actions: true,
        message: @message
      %>

      <%= c 'edit_message_form', message: @message %>

    <% end %>
  <% end %>
<% end %>