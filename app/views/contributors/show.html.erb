<%= c 'box', styles: [:large, :gray] do %>
  <%= c 'wrapper' do %>
    <%= c 'flex', styles: [:'big-gap'] do %>

      <% if @contributor.avatar_image? %>
        <a href="<%= @contributor.avatar_image_url %>" target="_blank">
          <%= c 'avatar', contributor: @contributor, styles: [:big] %>
        </a>
      <% else %>
        <%= c 'avatar', contributor: @contributor, styles: [:big] %>
      <% end %>

      <%= c 'heading' do %>
        <%= @contributor.name %>
      <% end %>

    <% end %>
  <% end %>
<% end %>

<%= c 'box' do %>
  <%= c 'wrapper' do %>
    <%= c 'stack', space: :xlarge do %>
      <%= c 'contributor_form', contributor: @contributor %>

      <%= c 'stack' do %>
        <%= c 'heading', styles: [:section] do %>
          <%= I18n.t 'contributor.activity' %>
        <% end %>

        <%= c 'requests_feed' do %>
          <% @contributor. recent_replies.each do |reply| %>
            <%= c 'requests_feed_item', latest_reply: reply %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
