<div class="<%= class_attr %>">

  <% if contributor_avatar? %>
    <%= link_to_if @expandable, image_tag(url_for(contributor_avatar), alt: ""), contributor_avatar, target: "_blank" %>
  <% else %>
    <svg
      class="Avatar-initials"
      style="<%= "background-color: #{color}" if color %>"
      viewBox="0 0 100 100"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <text x="50" y="50"><%= initials %></text>
    </svg>
  <% end %>
</div>
