<label class="<%= class_attr %>" for="<%= basic_defaults[:id] %>">
  <p class="Field-label"><%= label %></p>
  <% if help %>
    <small class="Field-help"><%= help %></small>
  <% end %>
  <% if validation_errors.any? %>
    <% validation_errors.each do |error| %>
      <strong class="Field-error">
        <%= error %>
      </strong>
    <% end %>
  <% end %>
  <%= content %>
</label>
