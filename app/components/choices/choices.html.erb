<div
  class="<%= class_attr %>"
  data-controller="choices"
>
  <%= c 'telegram_widget' %>
  <% choices.each do |choice| %>
    <label>
      <input
        name="channel"
        value="<%= choice[:value] %>"
        type="radio"
        data-target="<%= stimulus_target %>"
      />
      <%= choice[:label] %>
    </label>
  <% end %>
</div>
