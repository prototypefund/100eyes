<div class="<%= class_attr %>">
  <% choices.each do |choice| %>
    <label>
      <input
        name="<%= id %>"
        value="<%= choice[:value] %>"
        type="radio"
        data-<%= stimulus_controller %>-target="<%= stimulus_target %>"
        <%= 'checked' if choice[:value] == value %>
      />
      <div>
        <strong><%= choice[:label] %></strong>
        <% if choice[:help] %>
          <span class="Choices-help"><%= choice[:help] %></span>
        <% end %>
      </div>
    </label>
  <% end %>
</div>
