<main class="TwoFactorAuthentication">
  <%= c 'heading' do %>
    <%= t 'components.two_factor_authentication.header' %>
  <% end %>
  <%= form_with(model: user, url: verify_user_otp_session_path, local: true) do |_form| %>
    <% unless user.otp_enabled? %>
      <%= qr_code_as_svg %>
    <% end %>

    <label for='session[otp_code_token]'><%= t 'components.two_factor_authentication.label' %></label>
    <%= c 'input', id: 'session[otp_code_token]' %>
    <%= c 'button', type: 'submit', label: I18n.t('components.two_factor_authentication.submit') %>
  <% end %>
</main>
