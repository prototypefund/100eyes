<%= c 'stack' do %>

  <div
    class="OnboardingInstructions"
    data-controller="onboarding-instructions"
    data-action="input->onboarding-instructions#switchChannelInstructions"
  >
    <%= c 'stack' do %>
      <%= c 'choices',
        stimulus_target: 'onboarding-instructions.channel',
        choices: choices
      %>

      <div
        id="email-channel"
        class="OnboardingInstructions-instructions"
        data-target="onboarding-instructions.instructions"
      >
        <%= c 'stack' do %>
         <p class="text-serif">
           <strong><%= t 'components.onboarding_instructions.email.intro' %></strong>
         </p>

          <%= c 'onboarding_email_form', user: user %>
        <% end %>
      </div>

      <div
        id="telegram-channel"
        class="OnboardingInstructions-instructions text-serif"
        data-target="onboarding-instructions.instructions"
      >
        <%= c 'stack' do %>
          <p><strong><%= t 'components.onboarding_instructions.telegram.intro' %></strong></p>

          <%= c 'steps_list', steps: telegram_steps %>
        <% end %>
      </div>
    <% end %>
  </div>

<% end %>
